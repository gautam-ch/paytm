{
  "include": ["src"],
  "exclude": ["**/__tests__", "**/test.ts", "**/test.tsx"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "strict": true,
    "noEmit": false,
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true
  }
}